<!DOCTYPE html>
<html>
<head>

  <title>Pragprog Books Online Store</title>

  <%= stylesheet_link_tag "application" %><!-- <label id="code.slt"/> -->
  <%= javascript_include_tag "application" %><!-- <label id="code.jlt"/> -->
  <%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
</head>

<body class="<%= controller.controller_name %>">

  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> -->    
  </div>
  
  <div id="columns">
  	    
    <div id="side">
      
      <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
      
        <%= render @cart %>
        
      <% end %>
            
      <ul>
        <li><a href="http://www....">Home</a></li>
        <li><a href="http://www..../faq">Questions</a></li>
        <li><a href="http://www..../news">News</a></li>
        <li><a href="http://www..../contact">Contact</a></li>
      </ul>
    </div>
    <div id="main">

      <% if session[:counter] >= 5%>
        <div id='count'>
          Sessions:<%= pluralize(@count, 'time')%>
        </div> 
      <%end%> 
      
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
      
      <%= yield %>

    </div>
  </div>

</body>
</html>